{% extends 'homecliente/layoutCliente.twig' %}

{% block content %}
  <h3 class="text-center">Cardapio</h3>
     
<div class="row">
<div class="col s5 m2  push-s1">
  <table class="striped">
    <thead class="thead btn-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Sabor</th>
      </tr>
    </thead>
      <tbody>
        <tr>
          <td>{{session.idcarro}}</td>
          <td>{{session.nomesabor}}</td>
        </tr>
      </tbody>
  </table>
</div>  

{% for item in lista %}
<div class="col s5 m2  push-s1">
  <div class="card">
    <div class="card-image">
        <img src="{{item.urlimg}}" class="card-img img1" class="responsive-img">
        <span class="card-title">{{item.nomesabor}} {{item.valor}}</span>
          <a class="btn-floating halfway-fab waves-effect waves-light orange darken-4">
            <i class="material-icons">add</i>
          </a>
    </div>
    <div class="card-content">
      <p style="font-size:10px;">{{item.descricao}}</p>
    </div>
  </div>
</div>
{% endfor %}
</div>


{% endblock %}



    
    