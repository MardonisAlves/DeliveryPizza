{% extends 'layout.twig' %}

{% block content %}

<div class="container">

<section id="contact" class="section-padding">
      <div class="login-box-body">

           {% for message in messages %}
        <div class="alert alert-danger">
        <li>{{ message[0] }}</li>
        </div>
        {% endfor %}
       
      </div>
        
        <form action="/InserCliente" method="POST" role="form" class="contactForm">
          <div class="col-md-12 col-sm-6 col-xs-12 right">

            <div class="form-group">
              <div class="col-sm-12">
              <input type="email" class="form-control" name="email" id="email" placeholder="Seu Email" data-rule="email" data-msg="Please enter a valid email" required="obrigatorio"/>

               <input type="text" class="form-control" name="name" id="name" placeholder="name"  required="obrigatorio"/>

              <input type="hidden" class="form-control" name="typeUser" value="cliente" required="obrigatorio"/>
              </div>
            </div>

            <div class="form-group">
            <div class="col-sm-6">
              <input type="password" class="form-control" name="senha" id="senha" placeholder="senha" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" required="obrigatorio" />
            </div>
            <div class="col-sm-6">
              <input type="password" class="form-control col-sm-4" name="repetsenha" id="subject" placeholder="repet senha" data-rule="minlen:4" required="obrigatorio" />

              <div class="validation"></div>
            </div>
            </div>
          </div>

          <div class="col-xs-12">
            <!-- Button -->
            <div class="col-md-6">
            <button type="submit" id="submit" name="submit" class="btn btn-green">Finalizar</button>

            <button type="reset" id="submit" name="submit" class="btn btn-warning">Limpar</button>
          </div>
        </div>
        </form>

      </div>
    </div>
  </section>


{% endblock  %}