{% extends 'layout.twig' %}

{% block content %}



<section id="contact" class="section-padding">
    <div class="container fluid">
      <div class="row">
        <div class="header-section text-center">
          <h2>Cadastro de Clientes - {{ app.request.cookies.get('id') }} </h2>

         
          <hr class="bottom-line">
        </div>

        <div id="sendmessage">Your message has been sent. Thank you!</div>
        <div id="errormessage"></div>

        <form action="#" method="post" role="form" class="contactForm">
          <div class="col-md-6 col-sm-6 col-xs-12 left">
            <div class="form-group">
              <input type="text" name="name" class="form-control form" id="name" placeholder="Seu Nome" data-rule="minlen:4" data-msg="Please enter at least 4 chars" required="obrigatorio" />
              <div class="validation"></div>
            </div>

            <div class="form-group">
              <input type="email" class="form-control" name="email" id="email" placeholder="Seu Email" data-rule="email" data-msg="Please enter a valid email" required="obrigatorio"/>
              <div class="validation"></div>
            </div>

            <div class="form-group">
              <input type="telefone" class="form-control" name="telefone" id="telefone" placeholder="Seu Telefone" data-rule="email" data-msg="Please enter a valid email" required="obrigatorio"/>
              <div class="validation"></div>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" required="obrigatorio" />
              <div class="validation"></div>
            </div>
          </div>



          <div class="col-md-6 col-sm-6 col-xs-12 right">
            <div class="form-group">
              <input type="text" class="form-control" name="cidade" id="cidade" placeholder="Cidade" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" required="obrigatorio"/>
              <div class="validation"></div>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" name="rua" id="subject" placeholder="Rua" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" required="obrigatorio"/>
              <div class="validation"></div>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" name="bairro" id="subject" placeholder="Bairro" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject" required="obrigatorio"/>
              <div class="validation"></div>
            </div>

            <div class="form-group">
              <input type="text" class="form-control" name="referencia" id="subject" placeholder="Referencia" data-rule="minlen:4" data-msg="Please enter at least 8 chars of subject"/>
              <div class="validation"></div>
            </div>

          </div>

          <div class="col-xs-12">
            <!-- Button -->
            <button type="submit" id="submit" name="submit" class="form contact-form-button light-form-button oswald light">SEND EMAIL</button>
          </div>
        </form>

      </div>
    </div>
  </section>


{% endblock  %}