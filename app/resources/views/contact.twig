{% extends 'layout.twig' %}

{% block content %}
{% include 'partials/banner.twig'%}
<div class="container">
<div  style=" margin-top:50px;">
  <div class="row">
   
    <div class="col s12 m12 19">
      <h3>Fale com nosco</h3>
    </div>

    <div class="col s12 m12 19">
      <p>The standard chunk of Lorem Ipsum used since the 1500s is reproduced below for those interested. Sections 1.10.32
      </p>
    </div>

    <form class="col s10 m10 19" action="/newcontact" method="post">
      {% for message in messages %}
       <div class="card-panel teal lighten-2 white-text">{{message[0]}}</div>
      {% endfor %}
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="E-mail" id="first_name" type="text" class="validate" name="nome" required="">
          <label for="first_name">Name</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Email" id="disabled" type="email" class="validate" name="email" required="">
          <label for="disabled">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
          <input id="text" type="text" class="validate" name="telefone" required="">
          <label for="text">Telefone</label>
        </div>

         <div class="input-field col s6">
          <input id="text" type="text" class="validate" name="message" required="">
          <label for="text">Assunto</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
        <textarea id="textarea1" class="materialize-textarea" required=""></textarea>
          <label for="textarea1">Messagem</label>
        </div>
      </div>
      <div class="row">
       <div class="input-field col s12">
       <button class="btn btn-contato btn-small" type="submit" name="action">Enviar
        <i class="material-icons right">send</i>
      </button>
       </div>
      </div>
    </form>
  </div>
</div>
</div>
{% include 'partials/footer.twig' %}
{% endblock %}
