{% extends 'layoutAdmin.twig' %}

{% block content %}



<div class="container flex-wrap">
  <div class="login-box-body">
    <table class="table table-responsive-md">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Tamanho</th>
      <th scope="col">Valor</th>
      <th scope="col">Action</th>
    </tr>
  </thead>


  <tbody>
    {% for card in card %}
    <tr>
      <th scope="row">{{card.id}}</th>
      <td>{{card.nomesabor}}</td>
      <td>{{card.tamanho}}</td>
       <td>{{card.valor}}</td>

      <td>
        <a href="/listarid?id={{card.id}}" class="waves-effect waves-light">Edit
        <span class="material-icons left">edit_attributes</span>
      </a>

        <a href="/excluir?id={{card.id}}" class="waves-effect waves-light">Excluir
        <span class="material-icons left">restore_from_trash</span>
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
  </table>



{% endblock  %}