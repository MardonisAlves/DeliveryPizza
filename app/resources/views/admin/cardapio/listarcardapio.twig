{% extends 'layoutAdmin.twig' %}

{% block content %}



<div class="container">

    <table class="striped" style="margin-top:50px;">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Tamanho</th>
      <th scope="col">Valor</th>
      <th scope="col">Action</th>
    </tr>
  </thead>


  <tbody>
    {% for card in card %}
    <tr>
      <th scope="row">{{card.id}}</th>
      <td>{{card.nomesabor}}</td>
      <td>{{card.tamanho}}</td>
       <td>{{card.valor}}</td>

      <td>
        <a href="/listarid?id={{card.id}}" class="waves-effect waves-light green-text darken-4">Edit
          <i class="material-icons left">edit_attributes</i>
        
      </a>

        <a href="/excluir?id={{card.id}}" class="waves-effect waves-light  orange-text darken-4">Excluir
          <i class="material-icons orange-text darken-4 left">restore_from_trash</i>
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
  </table>
</div>



{% endblock  %}