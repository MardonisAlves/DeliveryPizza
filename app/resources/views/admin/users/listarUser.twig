{% extends 'layoutAdmin.twig' %}

{% block content %}



<div class="container">
  <div class="login-box-body">
    <div class="login-box-body">

     <a href="/newuser" class="btn btn-dark btn-sm text-white">
        New user<span><i class="fa fa-plus"></i></span>
      </a>

    <table class="table" id ="idtb">
  <thead class="thead btn-light">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
    
      
  <tbody>
    {% for user in users %}
    <tr>
      <th scope="row">{{user.id}}</th>
      <td>{{user.nome }}</td>
      <td>

        <a href="/deleteuser?id={{user.id}}" class="btn btn-danger btn-sm">
        <span><i class="fa fa-trash"></i></span></a>

        <button   type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#updateUser"
        data-iduser={{user.id}}
        data-typeuser={{user.tipouser}}
        data-emailuser={{user.email}}><span><i class="fa fa-lock"></i></span>
        </button>

         <a href="/UpdateUserEndeId?id={{user.id}}" class="btn btn-warning btn-sm">
        <span><i class="fa fa-edit"></i></span></a> 
      </td>
    </tr>
    {% endfor %}
  </tbody>
  
  </table>
</div>
 

{% endblock  %}