{% extends 'layoutAdmin.twig' %}

{% block content %}



<div class="container">
  <div class="login-box-body">
    <div class="login-box-body">
    <table class="table" id ="idtb">
  <thead class="thead btn-light">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nome</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
    
      
  <tbody>
    {% for user in users %}
    <tr>
      <th scope="row">{{user.id}}</th>
      <td>{{user.fullName }}</td>
      <td>

        <a href="/deleteuser?id={{user.id}}" class="btn btn-danger btn-sm">
        <span><i class="icon ion-md-trash"></i></span></a>

        <button   type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#updateUser"
        data-iduser={{user.id}}
        data-typeuser={{user.typeUser}}
        data-emailuser={{user.email}}><span><i class="icon ion-md-lock"></i></span>
        </button>

         <a href="/UpdateUserEndeId?id={{user.id}}" class="btn btn-danger btn-sm">
        <span><i class="icon ion-md-create"></i></span></a>

  
        
        
      </td>
    </tr>
    {% endfor %}
  </tbody>
  
  </table>
</div>
 

{% endblock  %}