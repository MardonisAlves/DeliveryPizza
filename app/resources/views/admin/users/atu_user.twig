{% extends 'layoutAdmin.twig' %}

{% block content %}



<div class="container">
  <div class="login-box-body">
    {% for message in messages %}
      <div class="alert alert-info">
      <li>{{ message[0] }}</li>
  
      </div>
    {% endfor %}



{% for getuser in user %}
<form method="post" action="/updateuserId?id={{getuser.Id}}" enctype="multipart/form-data">
  <div class="form-row">
    
    <div class="form-group col-md-8">
      <input type="text" class="form-control" id="name" value="{{getuser.email}}" name="email" required="obrigatorio">
    </div>
    <div class="form-group col-md-3">
     
      <select  class="form-control" id="input2" name="typeUser" required="obrigatorio">
        <option value="">Ecolha tipo user</option>
        <option value="admin">admin</option>
        <option value="cliente">cliente</option>
      </select>
    </div>
  {% endfor %}



  {% for getendere in endere %}
    <div class="form-group col-md-4">
      <input type="text" class="form-control" id="name" value="{{getendere.rua}}" name="rua" required="obrigatorio">
    </div>
    <div class="form-group col-md-2">
     <input type="text" class="form-control" id="name" value={{getendere.numero}} name="numero" required="obrigatorio">
    </div>
    <div class="form-group col-md-2">
     <input type="text" class="form-control" id="name" value="{{getendere.bairro}}" name="bairro" required="obrigatorio">
    </div>
     <div class="form-group col-md-2">
     <input type="text" class="form-control" id="name" value="{{getendere.cidade}}" name="cidade" required="obrigatorio">
    </div>
  {% endfor %}

</div>
  <button type="submit" class="btn btn-primary" id="click">Cadastrar</button>
  <button type="reset" class="btn btn-success">Reset</button>
</form>
  </div>
</div>
 

{% endblock  %}